    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm run start",
            "name": "Run npm start",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "console": "internalConsole",
            "cwd": "${workspaceRoot}",
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/dist/index.js",
            "outFiles": [
                "${workspaceFolder}/dist"
            ]
        }
    ]
}